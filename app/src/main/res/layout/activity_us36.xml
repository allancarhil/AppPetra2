<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Us36Activity">


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView68"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center|center_vertical"
                android:text="Motorista"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtUs36Mot"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView73"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center|center_vertical"
                android:text="Data"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtUs36Data"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:enabled="false"
                android:inputType="date|textPersonName"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center|center_vertical"
                android:text="Hora Inicial"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtUs36HI"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView76"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center|center_vertical"
                android:text="Hora Final"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtUs36HF"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView75"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center|center_vertical"
                android:text="Km Inicial"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtUs36KI"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView77"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center|center_vertical"
                android:text="Km Final"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txtUs36KF"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:text="Serviços"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="Check-list (apto para uso)"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="107dp">

            <EditText
                android:id="@+id/txtUs36Servicos"
                android:layout_width="413dp"
                android:layout_height="match_parent"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/chkUs36Lant"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_border"
                        android:text="Lanternagem"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/chkUs36Pn"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:background="@drawable/textview_border"
                        android:text="Pneus"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="149dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Saveiro -"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtNomeUs36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US-36"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <EditText
        android:id="@+id/txtNomeEquipamentoUs36"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="US-36"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtNomeUs36"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:text="REV.:01"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:text="Apoio"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:text="FORM.:011"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="356dp"
        android:layout_height="102dp"
        android:layout_marginTop="32dp"
        android:text="Relatório Diário de Equipamento"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUs36Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnUs36Save"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

    <Button
        android:id="@+id/btnUs36Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="salvar"
        android:text="Salvar"
        app:layout_constraintEnd_toStartOf="@+id/btnUs36Cancel"
        app:layout_constraintStart_toEndOf="@+id/btnUs36Sinc"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:text="PO-PRD.:0007/PO-PRD. 00017"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/txtUs36Obs"
        android:layout_width="220dp"
        android:layout_height="113dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/textview_border"
        android:text="Observações"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

    <Button
        android:id="@+id/btnUs36Sinc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="97dp"
        android:text="SINCRONIZAR"
        app:layout_constraintStart_toEndOf="@+id/txtUs36Obs"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>